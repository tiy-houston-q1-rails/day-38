<!DOCTYPE html>
<html>
<head>
  <title>Modally</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

  <% if @current_user %>
    <p>
      Hi <%= @current_user.email %>
    </p>
    <p class="pull-right">
      <%= link_to "Sign Out", sign_out_path, class: "btn btn-default" %>
    </p>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
